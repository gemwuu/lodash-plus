{
    "compilerOptions": {
        "outDir": "build/",
        "module": "commonjs",
        "target": "es3",
        "lib": ["esnext", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "moduleResolution": "node",
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true
    },
    "include": [
        "src/*.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "test",
        "index.js"
    ]
}
